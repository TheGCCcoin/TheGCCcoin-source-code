all: TheGCCcoind.exe

test check: test_TheGCCcoin.exe FORCE
	test_TheGCCcoin.exe

obj/%.o: %.cpp $(HEADERS)
	$(CXX) -c $(CFLAGS) -o $@ $<

obj/%.o: %.c $(HEADERS)
	$(CC) -c $(CFLAGS) -o $@ $<

obj/%.o: tor/common/%.c $(HEADERS)
	$(CC) -c $(CFLAGS) -o $@ $<

obj/%.o: tor/ext/%.c $(HEADERS)
	$(CC) -c $(CFLAGS) -o $@ $<

obj/%.o: tor/ext/curve25519_donna/%.c $(HEADERS)
	$(CC) -c $(CFLAGS) -o $@ $<

obj/%.o: tor/or/%.c $(HEADERS)
	$(CC) -c $(CFLAGS) -o $@ $<


obj/stealth.o: tor/adapter/stealth.cpp
	$(CXX) -c $(CFLAGS) -o $@ $<

obj/scrypt-x86.o: scrypt-x86.S
	$(CXX) -c $(xCXXFLAGS) -MMD -o $@ $<

obj/scrypt-x86_64.o: scrypt-x86_64.S
	$(CXX) -c $(xCXXFLAGS) -MMD -o $@ $<

TheGCCcoind.exe: $(OBJS:obj/%=obj/%) obj/stealth.o
	$(CXX) $(CFLAGS) $(LDFLAGS) -o $@ $(LIBPATHS) $^ $(LIBS)

TESTOBJS := $(patsubst test/%.cpp,obj-test/%.o,$(wildcard test/*.cpp))

obj-test/%.o: test/%.cpp $(HEADERS)
	$(CXX) -c $(TESTDEFS) $(CFLAGS) -o $@ $<

test_TheGCCcoin.exe: $(TESTOBJS) $(filter-out obj/init.o,$(OBJS:obj/%=obj/%))
	$(CXX) $(CFLAGS) $(LDFLAGS) -o $@ $(LIBPATHS) $^ -lboost_unit_test_framework $(LIBS)

clean:
	-rm -f TheGCCcoind.exe test_TheGCCcoin.exe
	-rm -f obj\*
	-rm -f obj-test\*
	cd leveldb; make clean

